<UserControl x:Class="RSL.Graphics.Generation.World.WorldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RSL.Graphics.Generation.World"
             xmlns:time="clr-namespace:RSL.Graphics.Generation.World.Time"
             xmlns:map="clr-namespace:RSL.Graphics.Generation.World.Map"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <GroupBox Header="{DynamicResource Generation.World}">
        <StackPanel>
            <time:WorldTimeManagerControl x:Name="WorldTime"/>
            <map:WorldMapManagerControl x:Name="WorldMap"/>
        </StackPanel>
    </GroupBox>
</UserControl>
