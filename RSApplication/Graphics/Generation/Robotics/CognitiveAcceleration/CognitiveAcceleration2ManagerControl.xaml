<UserControl x:Class="RSL.Graphics.Generation.Robotics.CognitiveAcceleration.CognitiveAcceleration2ManagerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RSL.Graphics.Generation.Robotics.CognitiveAcceleration"
             xmlns:funct="clr-namespace:RSL.Graphics.Generation.Maths.FunctionalVector"
             xmlns:controls="clr-namespace:RSL.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Expander Header="{DynamicResource Generation.CognitiveAcceleration}">
        <StackPanel>
            <local:CognitiveAcceleration2StackControl x:Name="CognitiveAcceleration2Stack" Margin="0, 5, 0, 0"/>

            <controls:RSBoxControl x:Name="AdderAcceleration" Margin="0, 5, 0, 0">
                <controls:RSBoxControl.Header>
                    <TextBlock Text="AdderAcceleration" HorizontalAlignment="Center"/>
                </controls:RSBoxControl.Header>
                <controls:RSBoxControl.ContentValue>
                    <funct:FunctionalVector2ReflectionControl/>
                </controls:RSBoxControl.ContentValue>
            </controls:RSBoxControl>

        </StackPanel>
    </Expander>
</UserControl>
