<UserControl x:Class="RSL.Graphics.Generation.Robotics.MechanicalTimerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RSL.Graphics.Generation.Robotics"
             xmlns:controls="clr-namespace:RSL.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Expander Header="{DynamicResource Generation.MechanicalTimer}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <TextBlock Grid.Row="0" Grid.Column="0">
            <Run Text="{DynamicResource Math.Sampling}"/>
            </TextBlock>
            <controls:RSNumericBox  Grid.Row="0" Grid.Column="1" x:Name="SamplingControl"/>
        </Grid>
    </Expander>
</UserControl>
