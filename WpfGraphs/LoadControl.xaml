<UserControl x:Class="WpfGraphs.LoadControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfGraphs"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel Orientation="Horizontal">
        <TextBox Name="GraphNameTextBox"  MinWidth="100" />
        <TextBox Name="FileNameTextBox"  MinWidth="100" HorizontalAlignment="Stretch" />
        <Button Content="Browse"   Name="button1"  Click="button1_Click" />
    </StackPanel>

</UserControl>
