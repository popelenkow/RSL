<UserControl x:Class="RSL.Controls.RSStackItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RSL.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderBrush="DarkGray" BorderThickness="2">
        <DockPanel Margin="0">
            <Label Grid.Row="0" Grid.Column="0" Margin="0" x:Name="ContentValueControl" DockPanel.Dock="Left"/>
            <Button Grid.Row="0" Grid.Column="1" Margin="0" x:Name="CloseControl" Click="Close" HorizontalAlignment="Right" VerticalAlignment="Top" Width="20" Height="20" DockPanel.Dock="Right">
                <Button.Content>
                    X
                </Button.Content>
            </Button>
        </DockPanel>
    </Border>
</UserControl>
