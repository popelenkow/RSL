<Window xmlns="https://github.com/avaloniaui" MinWidth="500" MinHeight="300"
        xmlns:viewModels="clr-namespace:AvaloniaCoreMVVM2.ViewModels;assembly=AvaloniaCoreMVVM2"
        xmlns:views="clr-namespace:AvaloniaCoreMVVM2.Views;assembly=AvaloniaCoreMVVM2">
  <Window.DataContext>
    <viewModels:MainViewModel/>
  </Window.DataContext>

  <Window.DataTemplates>
    <DataTemplate DataType = "viewModels:CustomerListViewModel">
      <views:CustomerListView/>
    </DataTemplate>

    <DataTemplate DataType = "viewModels:OrderViewModel">
      <views:OrderView/>
    </DataTemplate>
  </Window.DataTemplates>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height = "Auto" />
      <RowDefinition Height = "*" />
    </Grid.RowDefinitions>

    <Grid Name = "NavBar">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width = "*" />
        <ColumnDefinition Width = "*" />
        <ColumnDefinition Width = "*" />
      </Grid.ColumnDefinitions>

      <Button Content = "Customers"
         Command = "{Binding NavCommand}"
         CommandParameter = "customers"
         Grid.Column = "0" />

      <Button Content = "Order"
         Command = "{Binding NavCommand}"
         CommandParameter = "orders"
         Grid.Column = "2" />
    </Grid>

    <Grid Name = "MainContent" Grid.Row = "1">
      <ContentControl Content = "{Binding CurrentViewModel}" />
    </Grid>

  </Grid>

</Window>